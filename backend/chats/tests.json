{
  "tests": [
    {
      "name": "Get user chats returns array",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "expectedStatus": 200
    },
    {
      "name": "Create or get chat returns chat_id",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "body": {
        "action": "create_chat",
        "other_user_id": "2"
      },
      "expectedStatus": 200
    },
    {
      "name": "Reject request without user ID",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401
    }
  ]
}